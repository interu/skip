<% xml_doc = REXML::Document.new @mails -%>
<% fullcount = xml_doc.elements.each("feed/fullcount") { |count| count } -%>
<div class="notice_title"><%= icon_tag('email') %><%= "メール (未読#{fullcount}件)" %></div>
<table width="100%">
    <col width="80%">
    <col width="20%">
    <tbody>
      <% xml_doc.elements.each("feed/entry") do |mail| -%>
        <tr>
          <td>
            <div class="contents_title"><%= link_to(h(truncate(mail.elements['title'].text, :length => 40)), mail.elements['link'].attribute("href").to_s, :target => "_blank") %></div>
          </td>
          <td align="right">
            <span class="small_text" style="margin:3px;"><%= h(truncate(mail.elements['author/name'].text, :length => 10)) %></span>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>

