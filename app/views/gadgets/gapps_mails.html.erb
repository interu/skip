<div id="gadget_wrapper" class="ui-corner-all">
  <h2 class="ui-corner-top"><%= link_to("メール", "https://mail.google.com/a/#{gapps_domain}/") %></h2>
  <table>
    <col />
    <col width="150px" />
    <tbody>
      <% @mails.each do |mail| -%>
        <tr>
          <td>
            <div><%= link_to(h(truncate(mail.elements['title'].text, :length => 26)), mail.elements['link'].attribute("href").to_s, :target => "_blank") %></div>
          </td>
          <td>
            <span class="small_text"><%= h(truncate(mail.elements['author/name'].text, :length => 10)) %></span>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>
<div align="right"><%= link_to(icon_tag("page_edit") + "メールを書く", "https://mail.google.com/a/#{gapps_domain}/#compose", :target => "_blank") %></div>
