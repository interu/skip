<div id="gadget_wrapper" class="ui-corner-all">
  <h2 class="ui-corner-top"><%= icon_tag("chart_bar") + h(@popular_blogs[:title_name]) %> (<%= Time.now.ago(recent_day.days).strftime(_('%B %d %Y')) %> - <%= Time.now.strftime(_('%B %d %Y')) %>) - SKIP</h2>
  <% unless @popular_blogs[:pages].empty? -%>
    <table>
      <% @popular_blogs[:pages].each_with_index do |entry, i| %>
        <tr>
          <td width="15px"><%= i+1 %>.</td>
          <td width="40px">
            <div class="picture"><%= show_picture(entry.user, :width => 24, :height => 24) %></div>
          </td>
          <td class="entry_outline">
            <div>
              <%= link_to h(entry.title), polymorphic_url([current_tenant, entry.owner, entry]) %>
              <span class="infos"> by </span><span class="small_text"><%= user_link_to entry.user %></span>
            </div>
            <div><span class="infos"><%= get_entry_infos(entry) %></span></div>
          </td>
          <td class="date" width="75px">
            <%= h entry.updated_on.strftime(_("%B %d %Y")) %>
          </td>
        </tr>
      <% end -%>
    </table>
  <% end -%>
</div>
