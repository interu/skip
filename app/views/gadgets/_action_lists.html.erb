<style>
  a.rounded{cursor:pointer;height:30px;line-height:30px;background:transparent url( ./../images/btn_right.png ) no-repeat scroll right top;clear:left;display:block;padding:0 10px 0 0;width:auto;font-size:14px;margin:1px 0}a.rounded span{display:block;position:relative;white-space:nowrap;padding:0 0 0 10px;height:30px;line-height:30px;background:transparent url( <%= site_url %>/images/btn_left.png ) no-repeat scroll left top;color:#03c}a.rounded:hover{background-position:100% -30px;text-decoration:none}a.rounded:hover span{background-position:0% -30px}
</style>
<% links.each do |link| -%>
  <div><%= link_to(content_tag('span', link[:title]), link[:url],:title => link[:title], :class => 'rounded') %></div>
<% end -%>
