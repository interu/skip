<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="新着ユーザ/グループ">
        <Require feature="dynamic-height"/>
    </ModulePrefs>

    <Content type="html" view="home,canvas">
    <![CDATA[
    <script type="text/javascript" src="https://test-live.skipaas.jp/javascripts/skip/jquery/jquery.js"></script>
    <script type="text/javascript" src="https://test-live.skipaas.jp/javascripts/skip/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="https://test-live.skipaas.jp/javascripts/skip/jquery/ui/jquery-ui.js"></script>
    <script type="text/javascript" src="https://test-live.skipaas.jp/javascripts/skip/jquery/ui/ui.tabs.js"></script>
    <script type="text/javascript" src="https://test-live.skipaas.jp/javascripts/skip/jquery/plugins/jquery.cookie.js"></script>

    <script type="text/javascript">
        function init() {
            // sample access url : https://test.skipaas.jp/gadgets/gapps_mail
            var url = "https://test-live.skipaas.jp/gadgets/skip_recents";
            gadgets.io.makeRequest(url, response, { AUTHORIZATION: gadgets.io.AuthorizationType.IS_POST_PORTAL_UID});
        };

        function response(obj){
            document.body.innerHTML = obj.text;
            gadgets.window.adjustHeight();

            var links = document.body.getElementsByTagName("a");
            for(var i=0;i<links.length;i++){
                links[i].onclick = function(){
                    try{
                        _IS_OpenPortalIframe(this.href);
                    }catch(e){
                        console.info(e);
                    }
                    return false;
                }
            }

            $j = jQuery.noConflict();
            $j('#tabs').tabs({
                cookie: { expires:30 }
            });
            $j('#tabs').show();

            $j('.pagination a').live('click', function() {
                var url = $j(this).attr('href');
                var target = $j.getUrlVar(url, 'target');
                $j.ajax({
                    url: url,
                    success: function(html) {
                        $j('#' + target).html(html).appendClickForToggleTag();
                        $j('#' + target + '_body').highlight();
                    }
                });
                return false;
            });

        };

        document.body.innerHTML = "<img src='skin/imgs/indicator.gif'>";
        gadgets.util.registerOnLoadHandler(init);
    </script>
    ]]>
    </Content>
</Module>
